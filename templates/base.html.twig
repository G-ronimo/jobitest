        {% endblock %}
    </head>
    <body>
        {% block header %}
        <header>
            <nav class="navbar navbar-dark bg-dark">
                <a class="navbar-brand" href="{{ path('jobs') }}">
                    <img src="{{ asset('images/poleemploi.jpg') }}" width="30" height="30" class="d-inline-block align-top" alt=""> Bordeaux Emploi
