                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('jobs') }}" title="© Bordeaux Emploi - 2018">© Bordeaux Emploi - 2018</a>
                    </li>
                </ul>
            </nav>
        </footer>
        {% endblock %}
