{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <div class="row mb-5 mt-5">
        <a class="btn btn-dark mb-2" role="button" title="Retour à la liste" href="{{ path('jobs') }}">Retour à la liste</a>
        {% if job is not empty %}
        <h3 class="col-md-12">Détails de l'offre : {{ job.title }}</h3>
        <div class="col-md-12 h-md-250">
        <div class="card flex-md-row mt-4 shadow-sm">
            <div class="card-body d-flex flex-column align-items-start">
                <h1 class="mb-1">
                {{ job.title }}
                </h1>
                <div class="mb-1 text-muted">Publiée le : {{ job.date|date('d/m/Y') }}</div>
                <p class="card-text mb-1">{{ job.description }}</p>
                <p><b>Entreprise : </b>{{ job.company }}</p>
                <p><b>Lieu : </b>{{ job.place }}</p>
                <p><b>Type de contrat : </b>{{ job.type }}</p>
                <a class="btn btn-primary" role="button" title="Plus d'informations sur le site du partenaire" target="_blank" href="{{ job.link }}">Plus d'informations sur le site du partenaire</a>
            </div>
            {% if job.link is not empty %}
            <img class="card-img-right mr-2 mt-auto mb-auto w-25 p-3" src="{{ asset('images/poleemploi.jpg') }}">
            {% endif %}
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
