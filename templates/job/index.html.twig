{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <div class="row mb-5 mt-5">
        <h3>{{ title }}</h3>
        {% if jobs is not empty %}
        {% for job in jobs %}
        <div class="col-md-6 h-md-300">
            <div class="card flex-md-row mt-4 shadow-sm h-md-300">
                <div class="card-body d-flex flex-column align-items-start">
                    <h2 class="mb-1">
                        <a class="text-dark" title="En savoir plus" href="{{ path('job_show', {'id': job.id}) }}">{{ job.title }}</a>
                    </h2>
                    <div class="mb-1 text-muted">Publi√©e le : {{ job.date|date('d/m/Y') }}</div>
                    <p class="card-text mb-1">{{ job.description|truncate(70) }}</p>
                    <a class="btn btn-primary" role="button" title="En savoir plus" href="{{ path('job_show', {'id': job.id}) }}">En savoir plus</a>
                </div>
                <img class="card-img-right mr-2 mt-auto mb-auto w-25 p-3" src="{{ asset('images/poleemploi.jpg') }}">
            </div>
        </div>
        {% endfor %}
        {% endif %}
    </div>
</div>
{% endblock %}
